create client certificate
openssl req -newkey rsa:4096 -keyout theClient-key.pem -out theClient-csr.pem -nodes -days 365
openssl x509 -req -in theClient-csr.pem -CA myOwnServer-crt.pem -CAkey myOwnServer-key.pem -out theClient-crt.pem -set_serial 01 -days 365
openssl pkcs12 -export -clcerts -in theClient-crt.pem -inkey theClient-key.pem -out theGoodClient.p12
